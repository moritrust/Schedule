<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/confirmEditTextTime2"
        android:layout_width="257dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="time"
        android:text="00:00"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="341dp" />

    <TextView
        android:id="@+id/confirmTextViewDate"
        android:layout_width="201dp"
        android:layout_height="37dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="40dp"
        android:text="2022年2月1日(火)"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmTextViewTitle" />

    <TextView
        android:id="@+id/confirmTextViewTitle"
        android:layout_width="293dp"
        android:layout_height="43dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="59dp"
        android:text="予定確認画面"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/confirmChangeScheduleButton"
        android:layout_width="152dp"
        android:layout_height="58dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:text="変更"
        android:textAlignment="center"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="219dp"
        tools:layout_editor_absoluteY="570dp" />

    <Button
        android:id="@+id/confirmDeleteScheduleButton2"
        android:layout_width="152dp"
        android:layout_height="58dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:text="削除"
        android:textAlignment="center"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="570dp" />

    <EditText
        android:id="@+id/confirmEditText"
        android:layout_width="257dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="タイトル"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="167dp" />

    <TextView
        android:id="@+id/confirmTextView"
        android:layout_width="74dp"
        android:layout_height="48dp"
        android:text="予定名"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="167dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/confirmTextView2"
        android:layout_width="74dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="開始"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="254dp" />

    <TextView
        android:id="@+id/confirmTextView3"
        android:layout_width="74dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="終了"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="341dp" />

    <EditText
        android:id="@+id/confirmEditTextTime"
        android:layout_width="257dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="time"
        android:text="00:00"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="254dp" />

</androidx.constraintlayout.widget.ConstraintLayout>